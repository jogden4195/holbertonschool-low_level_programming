#include "holberton.h"

/**
 * times_table - prints the 9 times table
 *
 * Return: void
 */

void print_times_table(int n)
{
	int multiplier, product, i;
	
	if (n > 15 || n < 0)
		break;
	for (multiplier = 0; multiplier <= n; multiplier++)
	{
		for (i = 0; i <= n; i++)
		{
			product = multiplier * i;
			if (product <= 9)
			{
				if (i != 0)
					_putchar(' ');
				_putchar('0' + product);
				if (i != n)
				{
					_putchar(',');
					_putchar(' ');
				}
			}
			else if (product <= 99)
			{
				_putchar('0' + (product / 10));
				_putchar('0' + (product % 10));
				if (i != n)
				{
					_putchar(',');
					_putchar(' ');
				}
			}
			else if (product > 99)
			{
			  	_putchar('0' + (product / 10));
				_putchar('0' + ((product / 10) % 10));
				_putchar('0' + (product % 10));
				if (i != multiplier)
				{
				  _putchar(',');
				}
			}
		}
		_putchar('\n');
		product = 0;
	}
}
